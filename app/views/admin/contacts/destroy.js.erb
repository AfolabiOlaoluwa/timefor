<% if @contact.destroyed? %>
  $('#contact-' +<%= @contact.id %>).fadeOut(600);
  $.gritter.add({
    title: 'Success',
    text: 'Contact deleted.',
    class_name: 'color success'
  });
<% else %>
  $.gritter.add({
    title: 'Warning',
    text: 'There was a problem deleting the contact. Please try again.',
    class_name: 'color warning'
  });
<% end %>
