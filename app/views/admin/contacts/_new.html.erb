<div class="modal-dialog">
  <div class="md-content modal-content">
    <div class="modal-header">
      <button type="button" id="add-new-contact-close-top" class="close md-close" data-dismiss="modal"><i class="icon s7-close"></i></button>
      <h3 class="modal-title"><%= @title %></h3>
    </div>
    <div class="modal-body form">
      <%= form_for [:admin, @contact], remote: true, url: {action: "create", params: {name: @contact.name, phone: @contact.phone}}, html: {role: :form, 'data-model' => 'contact'} do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Name" %>
        </div>
        <div class="form-group">
          <%= f.label :phone %>
          <%= f.text_field :phone, autofocus: true, class: 'form-control', placeholder: "Phone Number", 'data-mask': 'phone' %>
        </div>
        <ul class="errors"></ul>
        <button type="button" id="add-new-contact-close" data-dismiss="modal" class="btn btn-default">Cancel</button>
        <%= f.submit "Submit", class: 'btn btn-primary'  %>
      <% end %>
    </div>
  </div>
</div>
